        </Compile>
    </ItemGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>StringEnricher.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

</Project>
