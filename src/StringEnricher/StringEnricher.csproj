        </Compile>
        <Compile Update="Configuration\StringEnricherSettings.Nodes.Shared.ShortNode.cs">
            <DependentUpon>StringEnricherSettings.cs</DependentUpon>
        </Compile>
        <Compile Update="Configuration\StringEnricherSettings.Nodes.Shared.TimeOnlyNode.cs">
